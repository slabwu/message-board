<html>
    <head>
        <link rel="stylesheet" href="/styles.css">
    </head>
    <body>
        <%- include('header', {links: links}) %>
        <section class="messageBoard">
            <% messages.forEach((message, index) => { %>
                <div class="message"">
                    <div class="profile"><%= message.user[0] %></div>
                    <div>
                        <span class="user"><%= message.user %></span>
                        <div class="body">
                            <%= message.text %>
                        </div>
                        <div class="details">
                            <%= new Intl.DateTimeFormat('en-US', { timeStyle: 'short' }).format(message.added) %> 
                            <a href="/message/<%= index %>">â“˜</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </section>
    </body>
</html>