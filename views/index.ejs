<html>
    <head>
        <link rel="stylesheet" href="/styles.css">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <body>
        <div class="heading">
            Cloud message board ☁︎
        </div>
        <section class="messageBoard">
            <% messages.forEach((message, index) => { %>
                <div class="message"">
                    <div class="profile"><%= message.username[0] %></div>
                    <div>
                        <span class="user"><%= message.username %></span>
                        <div class="body">
                            <%= message.text %>
                        </div>
                        <div class="details">
                            <%= new Intl.DateTimeFormat('en-US', { timeStyle: 'short' }).format(message.added) %> 
                            <div class="tooltip">ⓘ
                                <span class="tooltiptext"><%= message.added %></span>
                            </div>
                            <!-- <a href="/message/<%= index %>">ⓘ</a> -->
                        </div>
                    </div>
                </div>
            <% }) %>
        </section>
        <form action="/" method="POST">
            <input type="text" name="username">
            <input type="text" placeholder="Type here" name="text">
            <button>➤</button>
        </form>
    </body>
</html>